{
    "compilerOptions": {
        "target": "ES6",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "baseUrl": "src",
        "noImplicitAny": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "sourceMap": true,
        "strict": true,
        "strictNullChecks": true,
        "outDir": "dist", //Specifies the transpiler directory.         
    },
    "include": ["./**/*"],
}